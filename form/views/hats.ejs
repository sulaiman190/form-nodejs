<!-- views/list.ejs -->

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
    <div class="container">

        <div class="jumbotron">
             <image src = "images/download.png" id="logo" />
            <h1>All the list</h1>
            <p class="lead"></p>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                    <div>
                        <h1>My Hats List</h1>
                        <ul>
                        <% for(var i = 0; i < myhats.length; i++) { %>    
                        <li><%= myhats[i].id %></li>  
                        <li><%= myhats[i].name %></li>
                        <li><%= myhats[i].material %></li>
                        <li><%= myhats[i].height %></li>
                        <li><%= myhats[i].brim  %></li>  
                        <% } %> 
                        </ul>
                    </div>
                </div>
            </div>
<%- include('partials/footer') %>
        </div>
    </div>



</body>

</html>